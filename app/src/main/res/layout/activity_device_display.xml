<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activites.DeviceDisplayActivity">

    <include
        android:id="@+id/stoolbar"
        layout="@layout/sendnotificationtoolbar"
        />

    <!--    <ImageView-->
<!--        android:id="@+id/imageview"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="150dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="35dp"-->
<!--        android:background="@color/black"-->
<!--        android:src="@drawable/logo" />-->



    <TextView
        android:id="@+id/displayName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:text="Name"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/displayId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_app_registration_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:padding="20dp"
        android:text="Id"
        android:textColor="@color/white"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/btnSendNoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#F8D210"
        android:padding="10dp"
        android:text="Send Notification"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>